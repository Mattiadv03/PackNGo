<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pack__n__Go.MainPage"
             Title=""
             BackgroundColor="#121212"
             >

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="0" VerticalOptions="Center">
            <Label Text="Pack 'n' Go" FontSize="36" FontAttributes="Bold" HorizontalTextAlignment="Center" />

            <Label Text="Inserisci il nome della vacanza:" FontSize="20" HorizontalTextAlignment="Center" />

            <Entry x:Name="nomeVacanzaEntry" BackgroundColor="#121212" />

            <Label Text="Scegli la durata:" FontSize="20" HorizontalTextAlignment="Center" />

            <Slider x:Name="slider" Minimum="1"  Maximum="30" ValueChanged="OnSliderValueChanged" ThumbColor="#BB86FC" MinimumTrackColor="#BB86FC" />
            <Label x:Name="durataLabel" Text="Ancora da definire" HorizontalOptions="Center" VerticalOptions="Center" TextColor="#BB86FC" />

            <Label Text="Scegli la stagione:" FontSize="20" HorizontalTextAlignment="Center" />

            <FlexLayout JustifyContent="Center" Wrap="Wrap" >
                <!-- Estate -->
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <ImageButton Source="hot.png" x:Name="hotImage" Clicked="HotImageClicked" MaximumWidthRequest="150" Aspect="AspectFit" Margin="10" BackgroundColor="#121212" />
                    <Label Text="Estate" FontSize="16" HorizontalTextAlignment="Center" />
                </StackLayout>

                <!-- Inverno -->
                <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <ImageButton Source="cold.png" x:Name="coldImage" Clicked="ColdImageClicked" MaximumWidthRequest="150" Aspect="AspectFit" Margin="10" BackgroundColor="#121212" />
                    <Label Text="Inverno" FontSize="16" HorizontalTextAlignment="Center" />
                </StackLayout>
            </FlexLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>