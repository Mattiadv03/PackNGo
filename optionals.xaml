<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pack__n__Go.Optionals"
             BackgroundColor="#121212">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="0" VerticalOptions="Center">

            <Label Text="Pack and Go" FontSize="36" FontAttributes="Bold" HorizontalTextAlignment="Center" />

            <StackLayout HorizontalOptions="Center" x:Name="dynamicCategoria">
                <!-- Nome categoria impostato dinamicamente-->
            </StackLayout>

            <Label Text="Scegli, in base alle attività che devi svolgere, le cose da includere in valigia" FontSize="24" HorizontalTextAlignment="Center" />

            <StackLayout x:Name="layoutCheckBox" HorizontalOptions="CenterAndExpand"></StackLayout>

            <Button Text="Genera valigia" x:Name="buttonGeneraValigia" Clicked="GeneraValigia" TextColor="#121212" FontSize="16" BackgroundColor="#03DAC5"/>

            <Button Text="Seleziona tutto" x:Name="checkAllButton" Clicked="checkAllClicked" TextColor="#121212" FontSize="16" BackgroundColor="#BB86FC"/>

            <Button Text="Tipo di vacanza errato" x:Name="backButton" Clicked="BackClicked" TextColor="#121212" FontSize="16" BackgroundColor="#CF6679"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>