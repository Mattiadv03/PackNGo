<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pack__n__Go.Mare">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="0" VerticalOptions="Center">

            <Label Text="Mare" x:Name="titolo" FontSize="36" FontAttributes="Bold" HorizontalTextAlignment="Center" />

            <Label Text="Scegli le attività che prevedi di fare" x:Name="sottotitolo" FontSize="24" HorizontalTextAlignment="Center" />

            <StackLayout HorizontalOptions="Center" Orientation="Horizontal" >
                <!-- Manipola da c# una creazione automatica con ciclo da file -->
            </StackLayout>

            <Button Text="Tipo di vacanza errato" x:Name="backButton" Clicked="backClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>